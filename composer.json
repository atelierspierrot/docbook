{
    "name": "atelierspierrot/docbook",
    "title": "DocBook",
    "type": "project",
    "description": "Simple CMS PHP app to build rich HTML5 views from a Markdown contents filesystem.",
    "keywords": [ "cms", "markdown" ],
    "homepage": "http://github.com/atelierspierrot/docbook",
    "version": "1.4.0-alpha",
    "license": "GPL-3.0",
    "authors": [{
        "name": "Les Ateliers Pierrot & contributors",
        "email": "contact@ateliers-pierrot.fr",
        "homepage": "http://www.ateliers-pierrot.fr/"
    }],
    "support": {
        "issues": "http://github.com/atelierspierrot/docbook/issues",
        "source": "http://github.com/atelierspierrot/docbook/tags"
    },
    "require": {
        "php": ">=5.3.0",
        "psr/log": "1.0.0",
        "atelierspierrot/patterns": "1.0.8",
        "atelierspierrot/library": "1.1.7",
        "atelierspierrot/webfilesystem": "1.0.2",
        "piwi/markdown-extended": "dev-master",
        "atelierspierrot/internationalization": "1.0.3",
        "twig/twig": "1.*"
    },
    "require-dev": {
        "sami/sami": "dev-master",
        "dropbox/dropbox-sdk": "1.1.*"
    },
    "autoload": { "psr-0": { 
        "DocBook": "src",
        "DocBook_": "src"
    } },
    "config": {
        "vendor-dir": "src/vendor"
    },
    "scripts": {
        "post-update-cmd": [
            "DocBook\\Composer\\Script\\ClearCache::run",
            "DocBook\\Composer\\Script\\ClearI18n::run"
        ],
        "post-install-cmd": [
            "DocBook\\Composer\\Script\\Initialize::run"
        ],
        "post-autoload-dump": [
            "DocBook\\Composer\\Script\\ClearCache::run",
            "DocBook\\Composer\\Script\\ClearI18n::run"
        ],
        "post-create-project-cmd": [
            "DocBook\\Composer\\Script\\Initialize::run"
        ],
        "docbook-clear-cache": [
            "DocBook\\Composer\\Script\\ClearCache::run"
        ],
        "docbook-clearcache": [
            "DocBook\\Composer\\Script\\ClearCache::run"
        ],
        "docbook-clear-i18n": [
            "DocBook\\Composer\\Script\\ClearI18n::run"
        ],
        "docbook-flush": [
            "DocBook\\Composer\\Script\\ClearCache::run",
            "DocBook\\Composer\\Script\\ClearI18n::run"
        ],
        "docbook-init": [
            "DocBook\\Composer\\Script\\Initialize::run"
        ]
    },
    "extra": {
        "license_url": "http://github.com/atelierspierrot/docbook/blob/master/LICENSE",
        "license_name": "General Public Licence version 3.0",
        "branch-alias": {
            "dev-master": "1.4.*-dev"
        }
    }
}
